{
  "id": "instagram-playwright",
  "version": "1.0.0",
  "name": "Instagram",
  "company": "Meta",
  "iconURL": "icons/instagram.svg",
  "description": "Exports your Instagram profile and posts using Playwright browser automation.",
  "connectURL": "https://www.instagram.com/accounts/login/",
  "connectSelector": "svg[aria-label='Home'], a[href='/direct/inbox/']",
  "exportFrequency": "daily",
  "runtime": "playwright",
  "scopes": [
    { "scope": "instagram.profile", "label": "Your Instagram profile", "description": "Profile information including bio and follower counts" },
    { "scope": "instagram.posts", "label": "Your Instagram posts", "description": "Published posts from your feed" }
  ],
  "vectorize_config": {
    "documents": "caption"
  }
}
