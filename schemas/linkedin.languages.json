{
  "name": "LinkedIn Languages",
  "version": "2.0.0",
  "scope": "linkedin.languages",
  "dialect": "json",
  "description": "Languages listed on LinkedIn profile with proficiency levels",
  "schema": {
    "type": "object",
    "properties": {
      "languages": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "proficiency": { "type": "string" }
          },
          "required": ["name"],
          "additionalProperties": false
        }
      }
    },
    "required": ["languages"],
    "additionalProperties": false
  }
}
