{
  "id": "spotify-playwright",
  "version": "1.0.0",
  "name": "Spotify",
  "company": "Spotify",
  "description": "Exports your Spotify library, playlists, listening history, and preferences using Playwright browser automation.",
  "connectURL": "https://open.spotify.com/",
  "connectSelector": "button[data-testid='user-widget-link']",
  "exportFrequency": "daily",
  "runtime": "playwright",
  "scopes": [
    { "scope": "spotify.profile", "label": "Your Spotify profile", "description": "Profile information" },
    { "scope": "spotify.savedTracks", "label": "Your liked songs", "description": "Saved/liked tracks in your library" },
    { "scope": "spotify.playlists", "label": "Your playlists", "description": "Playlists and their tracks" }
  ],
  "vectorize_config": { "documents": "savedTracks" }
}
